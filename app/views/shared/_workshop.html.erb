    <h3 class="mt-4 mb-4"><%= section_title%></h3>
    <div class = "row" >
        <% workshops.each do |workshop| %>
            <div class = "col-lg-6">
                <div class = "card shadow mb-3 mt-2">
                    <div class = "card-body">
                        <h4 class = "card-title"> <%= workshop.name %> </h4>
                        <p class = "lead">  <%= truncate(workshop.description,length: 50)%> </p>
                        <h4><span class = "badge bg-primary" > From <%= workshop.total_duration %>  </span> </h4>
                        <h4> <span class="badge bg-primary "> Everyday from <%= workshop.start_time %> to <%= workshop.end_time %> </span> </h4>
                        <%=link_to "view details" ,workshop, class:"btn btn-danger bt-lg"%>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
