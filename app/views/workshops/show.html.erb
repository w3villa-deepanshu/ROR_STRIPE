<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-3">
            <div class="card-body">
                <h4 class="card-title"> <%=@workshop.name%></h4>
                <div class="row mt-3 " >
                    <div class="col-lg-7" >
                        <h4> <span class="badge bg-primary"> <%=@workshop.total_duration%> </span> </h4>
                        <h4> <span class="badge bg-primary"> <%=@workshop.daily_duration%> </span> </h4>
                    </div>
                    <p class="lead mt-3 mb-3"><%=@workshop.description%></p>
                    <div class="col-lg-5 " >
                        <h4> Total Sits : <span class="badge bg-primary"> <%=@workshop.total_sit%> </span> </h4>
                        <h4> Remaining Sits : <span class="badge bg-primary"> <%=@workshop.remaining_sits%> </span> </h4>
                        <h4> Registration Fee : <span class = " badge bg-primary" > <%=@workshop.registration_fees%> </span> </h4>
                    </div>
                </div>
            </div>
            <%=link_to "back to workshop",workshops_path,class:"btn btn-outline-danger btn-lg mt-3"%>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow mb-3">
            <div class="card-body">
            <% if @workshop.is_upcoming_workshop? %>
                <h4 class="card-title mb-2"> Reserve your sit now ! </h4>
                <%= form_with url: :bookings, data: { turbo: false } do |form|%>
                    <%= form.hidden_field :workshop_id , value: @workshop.id%>
                    <div class="form-group">
                        <%= form.label :full_name , class: "mb-2 mt-2"%>
                        <%= form.text_field :full_name,class: "form-control", required: true%>
                    </div>
                    <div class="form-group">
                        <%= form.label :email , class: "mb-2 mt-2"%>
                        <%= form.text_field :email,class: "form-control", required: true%>
                    </div>
                    <div class="form-group">
                        <%= form.label :contact_number , class: "mb-2 mt-2"%>
                        <%= form.text_field :contact_no,class: "form-control", required: true%>
                    </div>
                    <div class="form-group">
                        <%= form.label :no_of_ticket_you_want_book , class: "mb-2 mt-2"%>
                        <%= form.text_field :no_of_tickets,class: "form-control", required: true, max: 1, min: @workshop.remaining_sits%>
                    </div>
                    <h4 class="mt-4 mb-3">Card Details</h4>
                    <hr/>

                    <div class="form-group">
                        <%= form.label :number , class: "mb-2 mt-2"%>
                        <%= form.text_field :card_number,class: "form-control", required: true%>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <%= form.label :cvv , class: "mb-2 mt-2"%>
                                <%= form.text_field :cvv,class: "form-control", required: true,maxlength: 4%>
                            </div>   
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <%= form.label :month , class: "mb-2 mt-2"%>
                                <%= form.number_field :exp_month,class: "form-control", required: true,min:1,max:12%>
                            </div>   
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <%= form.label :year , class: "mb-2 mt-2"%>
                                <%= form.number_field :exp_year,class: "form-control", required: true,min: 2022,max: 2026%>
                            </div>   
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <%= form.submit "Book Your Tickets Now",class:"btn btn-outline-danger btn-lg mt-3"%>
                    </div>
                <% end %>
                 <% else %>
              <h2>Past</h2>
            <% end %>
            </div>
        </div>
    </div>
</div>
